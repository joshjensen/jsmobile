<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded">
  <DockLayout stretchLastChild="true">    
    <Label dock="top" text="Todo" id="header" stretch="none" horizontalAlignment="center" class="IndieFlower" />
    <StackLayout text="fill" id="wrapper" backgroundColor="red">
      <StackLayout orientation="horizontal">
        <Label text="ï„‡" id="selectAllIcon" />
        <TextField text="{{ todo }}" id="textInput" hint="What needs to be done?" />
      </StackLayout>
      <Border id="formBottomBorder" />
      <ListView items="{{ todos }}" height="300">
          <ListView.itemTemplate>
              <StackLayout orientatqion="horizontal">
                  <Label text="{{ name }}" />
              </StackLayout>
          </ListView.itemTemplate>
      </ListView>      
    </StackLayout>
  </DockLayout>
</Page>